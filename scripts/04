# Write a script which monitors the modifications made to the /etc/crontab file
# and sends an e-mail to root if the file is modified. Create a scheduled task
# to run this script everyday at midnight.

#!/bash
if [ ! -e ./check.md5 ]
then
	md5sum /etc/crontab > ./check.md5
fi

if [[ $(md5sum -c ./check.md5 | grep FAILED) ]]
then 
	echo "File was changed" | mail -s "your file was changed" root
fi

if [[ ! $(cat /etc/crontab | grep 04) ]]
then
	sudo bash -c 'echo "0 0 * * * bash $(pwd)/04" >> /etc/crontab'
fi 