# Write a script which monitors the modifications made to the /etc/crontab file
# and sends an e-mail to root if the file is modified. Create a scheduled task
# to run this script everyday at midnight.

crontab -l > cronfile
echo "0 0 * * * \
	md5sum1=\"\$(md5sum /etc/crontab | awk '{ print \$1 }')\" && \
	md5sum2=\"\$(cat /etc/crontab.log)\" && \
	if [ '\$md5sum1' != '\$md5sum2' ] ; then \
		md5sum /etc/crontab | awk '{ print \$1 }' > /etc/crontab.log && \
		echo '/etc/crontab modifier le \$(date)' | mail -s '/etc/crontab modifier' root ; fi" >> cronfile
crontab cronfile
rm cronfile
